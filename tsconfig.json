{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": ["./node_modules/@types", "./types", "mdx-env.d.ts"],
    "baseUrl": ".",
    "paths": {
      "@*": ["*"],
      "@components/*": ["components/*"],
      "@contents/*": ["contents/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "layouts/*": ["layouts/*"],
      "@styles/*": ["styles/*"],
      "@helpers/*": ["helpers/*"],
      "@types/*": ["types/*"],
      "@providers/*": ["providers/*"],
      "@config/*": ["config/*"],
      "@markdown/*": ["markdown/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "app/contact/page.mdx"
  ],
  "exclude": ["node_modules"]
}
